
a = "Welcome to the Trikky Guessr Game! We'll pick a person, place or thing, and you try to guess it. Ask yes or no questions, and when you're ready to guess the answer, enter: guess ____. Have fun!"
ask = raw_input(a)
b = 1

def question_answer(question):
    if "guess" in question:
        print "Nope! Guess again."
    else:
        if len(question) % 2 == 0 and len(ask) > 0 and:
            print "Yes!"
        elif len(question) % 2 == 1 and len(ask) > 0:
            print "Nope!"
        else:
            print "That's not a valid question!"

while ask != "Hey! This is a trick!":
    question_answer(ask)
    ask = raw_input()